{
  "name": "@cewald/nuxt-boilerplate-layer",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/jckimble/devcontainer-features/ngrok:3": {}
  },
  "mounts": [
    // "source=/Users/Path/To/Project,target=/workspaces/nuxt-boilerplate/playground,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": ["bradlc.vscode-tailwindcss", "dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "vue.volar"]
    }
  },
  "postCreateCommand": "npm i && npx nuxi prepare",
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "vue-dev",
      "protocol": "http",
      "elevateIfNeeded": false
    },
    "3001": {
      "label": "vue-preview",
      "protocol": "http",
      "elevateIfNeeded": false
    }
  }
}
